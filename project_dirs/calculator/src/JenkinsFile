pipeline {
    agent any
    environment {
        PATH="/Library/Frameworks/Python.framework/Versions/3.10/bin:${PATH}"
      }
    // We split the work into 3 stages:
    stages {
        // 1. Checkout the files from Git
        stage ('Prep') {
            steps {
                checkout scm
            }
        }
        // 2. Check if 'my-code.c' exists,
        stage ('Build') {
            steps {
                script {
                echo "PATH is: $PATH"
                sh '''
                echo PATH is: $PATH
                '''
                if (fileExists('project_dirs/calculator/src/calci.py')) {
                        echo 'Yes'
                    }
                else {
                        echo"Code file not found!"
                     }
                }
            }
        }
        // 3. Dummy deploy
        // Print a message (only done if the build is stable)
        stage ('Deploy') {
            steps {
                echo 'Deploying it gently...'
                sh 'python -V'
                sh 'python --version'
                sh 'python3 project_dirs/calculator/src/calci.py'
                }
            }
        }
}
